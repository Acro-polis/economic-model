function [Am_out] = addNewNode(Am_in)
%=====================================================
%
% Return a completely connected graph of dimension N
%
%=====================================================
N = size(Am_in,1);
Am_out = size(Am_in);

newColumn = zeros(N,1);
Am_out = [Am_in newColumn];
newRow = (1,N+1);
Am_out = [Am_out; newRow];

end

